<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="50dp"
                android:gravity="center_vertical|right"
                android:padding="10dp"
                android:id="@+id/result_text"
                android:textColor="#666666"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100">

            <Button android:onClick="buttonClick"
                android:id="@+id/all_clear_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="buttonClick"
                android:id="@+id/clar_entry_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="CE"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="buttonClick"
                android:id="@+id/back_space_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="BS"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="buttonClick"
                android:id="@+id/division_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#9370DB"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100">

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_7_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_8_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_9_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="buttonClick"
                android:id="@+id/multiply_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#9370DB"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100">

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_4_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_5_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_6_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="buttonClick"
                android:id="@+id/subtraction_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#9370DB"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100">

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_1_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_2_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_3_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="buttonClick"
                android:id="@+id/addition_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#9370DB"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100">

            <Button android:onClick="numButtonClick"
                android:id="@+id/num_0_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:backgroundTint="#E6E6FA"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp" />


            <Button android:onClick="buttonClick"
                android:id="@+id/decimal_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#E6E6FA"
                android:text="."
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button android:onClick="buttonClick"
                android:id="@+id/result_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#9370DB"
                android:text="="
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>